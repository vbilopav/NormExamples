@page
@model NormExample.Pages.RazorPageModel2
@{
    Layout = "_Layout.cshtml";
}

<h1>Razor Page Norm data access example</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @await foreach (var user in Model.Service.GetUsersAndRolesAsync())
        {
        <tr>
            <td>@user.id</td>
            <td>@user.userName</td>
            <td>@user.email</td>
            <td>@string.Join(", ", await user.roles.ToListAsync())</td>
        </tr>
        }
    </tbody>
</table>
